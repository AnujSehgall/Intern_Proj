<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.example.anuj.inten_proj.Interest_Act">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Redox"
        app:titleMarginStart="10dp"
        android:id="@+id/toolbar">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="4dp"
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/colorWhite"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/something"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/rel1"
                android:text="Select your Training type"
                android:textSize="12dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hint1"
                android:background="@drawable/edittext_stroke"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="15dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/train"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:prompt="@string/spinner_title">
                </android.support.v7.widget.AppCompatSpinner>

            </RelativeLayout>

            <TextView
                android:id="@+id/something2"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/rel1"
                android:text="Select your Exercise type"
                android:textSize="12dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hint1"
                android:background="@drawable/edittext_stroke"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="15dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/excer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:prompt="@string/spinner_title">

                </android.support.v7.widget.AppCompatSpinner>
            </RelativeLayout>

            <TextView
                android:id="@+id/something3"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/rel1"
                android:text="Choose the desired sports"
                android:textSize="12dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hint1"
                android:background="@drawable/edittext_stroke"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="15dp">

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/checkBox4"
                    android:layout_below="@+id/checkBox4"
                    android:layout_marginEnd="82dp"
                    android:layout_marginTop="14dp"
                    android:text="Dance" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="34dp"
                    android:text="Running," />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/checkBox3"
                    android:layout_alignBottom="@+id/checkBox3"
                    android:layout_alignStart="@+id/checkBox2"
                    android:text="Rugby" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/checkBox3"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:text="Swimming" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/checkBox1"
                    android:layout_marginTop="11dp"
                    android:text="Football" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/nxt2qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/gradient"
                    android:text="Next"
                    android:textColor="@color/colorWhite" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
